	<%= form_tag("/products", method: "get", :class=> "navbar-form") do %>
		<%= text_field_tag(:q, "", class: "form-control", placeholder: "Find a product") %>
		<%= submit_tag("Search", class: "btn btn-default") %>
	<% end %>
</div><!--search bar end-->
<div class="welcome_page_top">
	<div class="row" id="welcome-button-row">
		<div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-sm-12" id="icon">
			<p class="company_logo_img"><%= image_tag("shopicon_crop.jpg", :class=> "img-class") %></p>
			<p class="welcome_intro_text">Personalised animal cards, designed to make loved ones smile</p>
		</div><!--image_tag col-md-4 end-->
		<div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-sm-12">
