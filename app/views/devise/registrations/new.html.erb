<div class="mainContent">
  <div class="content">
    <article class="topContent" id="login_out">
      <div class="page_top">
        <div class="row" id="page-top-row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="icon">
            <div class="login_logout_form">
              <h2 class="form-signin-heading">Please sign up</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="field">
                  <%= f.text_field :first_name, autofocus: true, class: "form-control", id: "login_logout", placeholder: "Enter your first name" %>
                </div>

                <div class="field">
                  <%= f.text_field :last_name, autofocus: true, class: "form-control", id: "login_logout", placeholder: "Enter your last name" %>
                </div>

                <div class="field">
                  <%= f.email_field :email, autofocus: true, class: "form-control", id: "login_logout", placeholder: "Enter your email address" %>
                </div>

                <div class="field">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "login_logout", placeholder: "Enter a Password" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>

                <div class="field">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "login_logout", placeholder: "Confirm Password" %>
                </div>

                <div class="actions">
                  <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div><!--login logout form end-->
          </div>
        </div>
      </div>
    </article>
  </div>
</div>