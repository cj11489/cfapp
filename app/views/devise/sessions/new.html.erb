<div class="mainContent">
  <div class="content">
    <article class="topContent" id="login_out">
      <div class="page_top">
        <div class="row" id="page-top-row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="icon">
            <div class="login_logout_form">    
              <h2 class="form-signin-heading">Log in</h2>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.email_field :email, autofocus: true, class: "form-control", id: "login_logout", placeholder: "Email Address" %>
                </div>

                <div class="field">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "login_logout", placeholder: "Password" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class="actions">
                  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div><!--login_logout form end-->
          </div>
        </div>
      </div>
    </article>
  </div>
</div>