<div class="mainContent">
  <div class="content">
    <article class="topContent" id="unlock">
      <div class="page_top">
        <div class="row" id="page-top-row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="icon">
			<div class="login_logout_form">   
				<h2 class="form-signin-heading">Resend unlock instructions</h2>

				<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>

				  <div class="field">
				    <%= f.email_field :email, autofocus: true, class: "form-control", id: "login_logout", placeholder: "Enter your email address" %>
				  </div>

				  <div class="actions">
				    <%= f.submit "Resend unlock instructions", class: "btn btn-lg btn-primary btn-block",  id: "unlock-btn"%>
				  </div>
				<% end %>

				<%= render "devise/shared/links" %>
			</div>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
