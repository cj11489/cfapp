<div class="general_page_styles">
  	<div class="login_logout_form"> 
		<h2 class="form-signin-heading">Forgot your password?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.email_field :email, autofocus: true, class: "form-control", id: "login_logout", placeholder: "Email address" %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div><!--login logout form end-->
</div><!-- general page styles end-->