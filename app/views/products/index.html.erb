<div class="main-body">
  <div class="products-page">
    <p id="notice"><%= notice %></p>

    <h1>Products</h1>

      <div class="container-fluid">
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-md-4 col-sm-6 col-xs-12">
              <div class="product-container">
                  <%= image_tag(product.image_url, class: "img-responsive") %>
                  <h4 class="product-name"><%= product.name %></h4><br>
                  <p class="product-description"><%= product.description %></p>
                  <hr>
                  <p class="product-price"><%= product.price %></p>
                  <hr>
                  <p><%= link_to 'Show', product %>
                  <%= link_to 'Edit', edit_product_path(product) %>
                  <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
              </div><!--product container end-->
            </div><!--col-md-4 end-->
          <% end %>
        </div><!--row end-->
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="new-product-container">
              <%= link_to 'New Product', new_product_path %>
            </div><!--new product container end-->
          </div><!--col-md-4 end-->
        </div><!--row end-->
     </div><!--container-fluid end-->  
  </div><!--products-page end-->
</div><!--main-body end-->
